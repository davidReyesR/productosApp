<?xml version="1.0" encoding="UTF-8" ?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence" version="3.0">

    <persistence-unit name="productoJPA" transaction-type="JTA">
        <!-- Provider Hibernate Core Dependecy -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <!-- Register all models -->
        <class>org.curso.jakarta.model.Producto</class>
        <class>org.curso.jakarta.model.Carro</class>
        <class>org.curso.jakarta.model.Categoria</class>
        <class>org.curso.jakarta.model.Cliente</class>
        <class>org.curso.jakarta.model.Direccion</class>
        <exclude-unlisted-classes>true</exclude-unlisted-classes>
        <!-- DB name -->
        <jta-data-source>java:/productos</jta-data-source>
        <properties>
            <!-- JDBC URL Server:Port/DBName -->
            <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/productos"/>
            <!-- DB Driver -->
            <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <!-- DB User -->
            <property name="javax.persistence.jdbc.user" value="postgres"/>
            <!-- DB Pass -->
            <property name="javax.persistence.jdbc.password" value="1234"/>
            <!-- Dialect compatibility PostgreSQL -->
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <!-- Attention, this option can cause data destroy in db. Use caution.
                Values: validate, update, create, create-drop -->
            <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
            <!-- Show SQL in console-->
            <property name="hibernate.show_sql" value="true"/>
            <!-- Show SQL formatted -->
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>